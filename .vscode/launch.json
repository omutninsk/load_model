    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "request_generator/app.py",
                //"FLASK_APP": "microservice/app.py",
                "AGENT_HOST_NAME": "localhost",
                "FLASK_DEBUG": "1",
                "SERVICE_NAME": "request_generator",
                //"SERVICE_NAME": "microservice1",
                //"SERVICE_PORT": "5011"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
